<?xml version="1.0"?>
<config>
    <tabs>
        <basicrum_analytics translate="label">
            <label>BasicRUM Analytics</label>
            <sort_order>9999</sort_order>
        </basicrum_analytics>
    </tabs>
    <sections>
        <basicrum_analytics translate="label">
            <label>Configuration</label>
            <tab>basicrum_analytics</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label comment">
                    <label>General Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <comment><![CDATA[<strong style="color: #eb5202;">BasicRUM</strong> - Open Source Real User Monitoring system - <a href="https://www.basicrum.com/" target="_blank">https://www.basicrum.com/</a>]]></comment>
                    <fields>
                        <enabled translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <boomerang_version translate="label">
                            <label>Boomerang JS</label>
                            <frontend_type>select</frontend_type>
                            <source_model>basicrum_analytics/system_config_source_version</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_class>disabled</frontend_class>
                        </boomerang_version>
                        <beacon_endpoint translate="label">
                            <label>Beacon Endpoint URL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enter the URL where analytics data will be sent</comment>
                        </beacon_endpoint>
                    </fields>
                </general>
                <privacy translate="label">
                    <label>Data Privacy / GDPR</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>15</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <opt_in_required translate="label">
                            <label>Opt-In Required</label>
                            <frontend_type>select</frontend_type>
                            <frontend_model>basicrum_analytics/adminhtml_system_config_form_field_consentInfo</frontend_model>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </opt_in_required>
                    </fields>
                </privacy>
                <wait_after_onload translate="label">
                    <label>Wait After Onload</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable Wait After Onload</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <wait_ms translate="label">
                            <label>Wait After Onload (ms)</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-number</validate>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Milliseconds to delay the beacon to capture additional metrics.</comment>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </wait_ms>
                    </fields>
                </wait_after_onload>
                <developer translate="label">
                    <label>Developer</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>30</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <use_unminified_loaders translate="label comment">
                            <label>Use Unminified Loaders</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enable to load non-minified loader scripts for debugging purposes.</comment>
                        </use_unminified_loaders>
                    </fields>
                </developer>
            </groups>
        </basicrum_analytics>
    </sections>
</config>
